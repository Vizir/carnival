- if controller_name != 'sessions'
  .sign_in
    = link_to "Entrar", new_session_path(resource_name)
- if devise_mapping.registerable? && controller_name != 'registrations'
  .sign_up
    = link_to "Registrar-se", new_registration_path(resource_name)
- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
  .forgot_password
    = link_to "Esqueci minha senha", new_password_path(resource_name)
- if devise_mapping.omniauthable?
  .oauth
    - resource_class.omniauth_providers.each do |provider|
      %div{class: provider}
        = link_to "Login com #{provider.to_s.titleize}", admin_user_omniauth_authorize_path(provider: provider)
